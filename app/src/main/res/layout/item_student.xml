<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_trungbinh"
        android:text="Trung binh toan"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/txt_maxvan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="max van"
        app:layout_constraintTop_toTopOf="@id/txt_trungbinh"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_minvan"
        android:text="minvan"
        app:layout_constraintTop_toTopOf="@id/txt_maxvan"
        android:layout_marginTop="150dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>